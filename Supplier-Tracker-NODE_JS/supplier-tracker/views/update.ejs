<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

  <body>

    <%- include("./partials/nav.ejs") %>

    
      <div class="create-supply content">
        <form action="/update/<%= supplier[0].supplier_id %>" method="POST">

          <label for="company_name">Company Name:</label>
          <input type="text" id="company_name" name="company_name" value="<%= supplier[0].company_name %>" required>

          <label for="contact_name">Contact Name:</label>
          <input type="text" id="contact_name" name="contact_name" value="<%= supplier[0].contact_name %>">

          <label for="email">Email:</label>
          <input type="email" id="email" name="email" value="<%= supplier[0].email %>">

          <label for="product">Choose a Product:</label>
          <select id="product" name="product" required>
            <option value= "1">Tomatoes</option>
            <option value="2">Potatoes</option>
            <option value="3">Onions</option>
            <option value="4">Milk</option>
            <option value="5">Cheese</option>
            <option value="6">Butter</option>
          </select>

          <label for="quantity">Quantity:</label>
          <input type="number" id="quantity" name="quantity" min="0" step="0.1" value="<%= supplier[0].quantity %>" required>

          <button>Submit</button>

        </form>
      </div>

      <%- include("./partials/footer.ejs") %>

  </body>

</html>